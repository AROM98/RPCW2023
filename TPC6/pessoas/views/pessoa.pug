extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Student Record: #{a.id}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            li #[b Número:] #{a.id}
            li #[b CC:] #{a.cc}
            li #[b Nome:] #{a.nome}
            li #[b Idade:] #{a.idade}
            li #[b Sexo:] #{a.sexo}
            li #[b Morada:] #{a.morada.cidade}, #{a.morada.distrito}
            li #[b Descrição:] #{a.descricao}
            li #[b Profissão:] #{a.profissao}
            li #[b Partido Político:] #{a.partido_politico.party_abbr}, #{a.partido_politico.party_name}
            li #[b Religião:] #{a.religiao}
            li #[b Desportos:] #{a.desportos}
            li #[b Animais:] #{a.animais}
            li #[b Figura Pública PT:] #{a.figura_publica_pt}
            li #[b Marca carro:] #{a.marca_carro}
            li #[b Destinos Favoritos:] #{a.destinos_favoritos}
            li #[b Fumador:] #{a.atributos.fumador}
            li #[b Gosta de cinema:] #{a.atributos.gosta_cinema}
            li #[b Gosta de viajar:] #{a.atributos.gosta_viajar}
            li #[b Acorda cedo:] #{a.atributos.acorda_cedo}
            li #[b Gosta de ler:] #{a.atributos.gosta_ler}
            li #[b Gosta de música:] #{a.atributos.gosta_musica}
            li #[b Gosta de comer:] #{a.atributos.gosta_comer}
            li #[b Gosta de animais de estimação:] #{a.atributos.gosta_animais_estimacao}
            li #[b Gosta de dançar:] #{a.atributos.gosta_dancar}
            li #[b Comida favorita:] #{a.atributos.comida_favorita}

    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



