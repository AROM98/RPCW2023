extends layout

block content
  .w3w3-container.w3-teal
    h2 Registo de Tarefa
  form.w3-container(action='/tarefas' method='POST')
    input(type='hidden' name='id' value= next_id)
    label.w3-text-teal
      b  Autor 
    input.w3-input.w3-border.w3-light-grey(type='text' name='autor')
    label.w3-text-teal
      b  Data Limite 
    input.w3-input.w3-border.w3-light-grey(type='date' name='datafinal')
    label.w3-text-teal
      b  Descrição 
    input.w3-input.w3-border.w3-light-grey(type='text' name='descricao')
    label.w3-text-teal
      b  Tipo de tarefa 
    select.w3-select.w3-border.w3-light-grey(name='tipo')
      option(value='' disabled='' selected='')  Escolha o tipo 
      option(value='Emprego')  Emprego 
      option(value='Pessoal')  Pessoal 
      option(value='Casa')  Casa 
      option(value='Familia')  Familia 
    input(type='hidden' name='estado' value='por fazer')
    input.w3-btn.w3-blue-grey(type='submit' value='Registar')
    input.w3-btn.w3-blue-grey(type='reset' value='Limpar')
  .row
    .column
      h3
        b Tarefas por fazer: 
      table.w3-table.w3-bordered
        tr.w3-red
          th Autor
          th Data Limite
          th Descrição
          th Tipo
          th Estado
          th Editar
        each t in tarefas
          if t.estado != 'concluido'
            tr
              td= t.autor
              td= t.datafinal
              td= t.descricao
              td= t.tipo
              td= t.estado
              td
                a(href='/tarefas/' + t.id +'/concluir/') [Concluir] 
                a(href='/tarefas/' + t.id +'/editar/') [Editar] 
                a(href='/tarefas/' + t.id +'/apagar/') [Apagar]
    .column
      h3
        b Tarefas concluidas:
      table.w3-table.w3-bordered
        tr.w3-green
          th Autor
          th Data Limite
          th Descrição
          th Tipo
          th Estado
          th Apagar
        each t in tarefas
          if t.estado == 'concluido'
            tr
              td= t.autor
              td= t.datafinal
              td= t.descricao
              td= t.tipo
              td= t.estado
              td
                a(href='/tarefas/' + t.id +'/editar/') [Editar] 
                a(href='/tarefas/' + t.id +'/apagar/') [Apagar]
  footer.w3-container.w3-teal
    address Gerado por A84347 @ RPCW2023 em #{d}



    
